{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "mapRoot": "./src/",
    "paths": {
      "@abp/*": [ "node_modules/abp-ng2-module/dist/src/*" ],
      "@app/*": [ "src/app/*" ],
      "@shared/*": [ "src/shared/*" ],
      "@node_modules/*": [ "node_modules/*" ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
